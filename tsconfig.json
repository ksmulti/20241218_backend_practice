{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6"
     ],
      "target": "es2016",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
      }
    },
    "include": ["src/**/*"]
  }